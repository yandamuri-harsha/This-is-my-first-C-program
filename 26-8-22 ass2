#include<stdio.h>
#include<string.h>
int main(){
    char a[20];
    int i, len, temp=0;
    printf("Enter a string:");
    gets(a);
    len = strlen(a);
    for(i=0;i < len ;i++){
        if(a[i] != a[len-i-1])
        {
            temp = 1;
        break;
   }
}
    
    if (temp==0) {
        printf("String is a palindrome");
    }    
    else {
        printf("String is not a palindrome");
    }
    return 0;
} 
