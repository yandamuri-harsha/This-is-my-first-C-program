#include <stdio.h>


   int main() {
    int a[10][10],i,j,r,c,sum=0;
    printf("enter  the row and column size");
    scanf("%d %d",&r,&c);
    printf("enter  the elements::");
    for(i=0;i<r;i++)
    {
        for(j=0;j<c;j++)
        {
            scanf("%d",&a[i][j]);
        }
    }
    for(i=0;i<r;i++)
    {
        for(j=0;j<c;j++)
        {
            printf("%d\t",a[i][j]);
        }
    printf("\n");
    }
    for(i=0;i<r;i++)
    {
        sum=0;
        for(j=0;j<c;j++)
        {
            
            sum=sum+a[j][i];
            
        }
    
            printf(" the sum is::%d\n",sum);
    }
        
    
    return 0;
}
